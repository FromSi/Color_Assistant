<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ImageActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/test"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/list_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_one_1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height" />

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_one_2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height"
                            android:paddingStart="8dp" />

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_one_3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height"
                            android:paddingStart="8dp" />
                    </LinearLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="Test"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/content_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Test"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/title_one" />

                        <com.like.LikeButton
                            android:id="@+id/share"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="8dp"
                            app:icon_size="@dimen/item_icon_size"
                            app:layout_constraintEnd_toStartOf="@+id/save_one"
                            app:layout_constraintTop_toBottomOf="@+id/content_one"
                            app:unlike_drawable="@drawable/share" />


                        <com.like.LikeButton
                            android:id="@+id/save_one"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="8dp"
                            app:icon_size="@dimen/item_icon_size"
                            app:icon_type="heart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/content_one"
                            app:unlike_drawable="@drawable/save" />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/list_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_two_1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height" />

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_two_2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height" />

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_two_3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height" />

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_two_4"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height" />
                    </LinearLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="Test"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/content_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Test"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/title_two" />

                        <com.like.LikeButton
                            android:id="@+id/share_two"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="8dp"
                            app:icon_size="@dimen/item_icon_size"
                            app:layout_constraintEnd_toStartOf="@+id/save_two"
                            app:layout_constraintTop_toBottomOf="@+id/content_two"
                            app:unlike_drawable="@drawable/share" />


                        <com.like.LikeButton
                            android:id="@+id/save_two"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="8dp"
                            app:icon_size="@dimen/item_icon_size"
                            app:icon_type="heart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/content_two"
                            app:unlike_drawable="@drawable/save" />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/c3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/list_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_three_1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height" />

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_three_2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height" />

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_three_3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height" />

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_three_4"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height" />

                        <kz.sgq.colorassistant.ui.view.ItemColor
                            android:id="@+id/item_three_5"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/image_item_colors_height" />
                    </LinearLayout>


                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="Test"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/content_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Test"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/title_three" />

                        <com.like.LikeButton
                            android:id="@+id/share_three"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="8dp"
                            app:icon_size="@dimen/item_icon_size"
                            app:layout_constraintEnd_toStartOf="@+id/save_three"
                            app:layout_constraintTop_toBottomOf="@+id/content_three"
                            app:unlike_drawable="@drawable/share" />


                        <com.like.LikeButton
                            android:id="@+id/save_three"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="8dp"
                            app:icon_size="@dimen/item_icon_size"
                            app:icon_type="heart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/content_three"
                            app:unlike_drawable="@drawable/save" />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>